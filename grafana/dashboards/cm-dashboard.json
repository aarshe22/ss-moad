{
  "title": "Conference Manager (CM) \u2013 Application Metrics",
  "tags": [
    "MOAD",
    "CM",
    "Application"
  ],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "templating": {
    "list": [
      {
        "type": "datasource",
        "name": "ds_prom",
        "query": "prometheus",
        "current": {
          "selected": true,
          "text": "Prometheus",
          "value": "Prometheus"
        },
        "hide": 0,
        "label": "Prometheus",
        "refresh": 1,
        "regex": "",
        "skipUrlSync": false
      },
      {
        "type": "datasource",
        "name": "ds_loki",
        "query": "loki",
        "current": {
          "selected": true,
          "text": "Loki",
          "value": "Loki"
        },
        "hide": 0,
        "label": "Loki",
        "refresh": 1,
        "regex": "",
        "skipUrlSync": false
      },
      {
        "name": "host",
        "type": "query",
        "datasource": {
          "type": "loki",
          "uid": "${ds_loki}"
        },
        "query": {
          "query": "label_values({app=\"CM\"}, host)",
          "refId": "StandardVariableQuery"
        },
        "current": {
          "selected": false,
          "text": "All",
          "value": "$__all"
        },
        "includeAll": true,
        "multi": true
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "CM Request Rate",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(rate({app=\"CM\", host=~\"$host\", source_component=\"haproxy\"} | json [5m]))",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "${ds_loki}"
          },
          "legendFormat": "{{host}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Authentication Attempts vs Failures",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(rate({app=\"CM\", host=~\"$host\", event_type=\"authentication\", auth_result=\"success\"} | json [5m]))",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "${ds_loki}"
          },
          "legendFormat": "Success"
        },
        {
          "expr": "sum(rate({app=\"CM\", host=~\"$host\", event_type=\"authentication\", auth_result=\"failed\"} | json [5m]))",
          "refId": "B",
          "datasource": {
            "type": "loki",
            "uid": "${ds_loki}"
          },
          "legendFormat": "Failed"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Session Creation Failures",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "expr": "sum(count_over_time({app=\"CM\", host=~\"$host\", level=\"error\"} |= \"session\" | json [1h]))",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "${ds_loki}"
          }
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ]
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 1,
                "color": "yellow"
              },
              {
                "value": 10,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Top CM Error Types",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 6,
        "y": 8
      },
      "targets": [
        {
          "expr": "topk(10, sum by (event_type) (count_over_time({app=\"CM\", host=~\"$host\", level=\"error\"} | json [1h])))",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "${ds_loki}"
          },
          "format": "table",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "displayMode": "list"
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "event_type"
            },
            "properties": [
              {
                "id": "displayName",
                "value": "Error Type"
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Value"
            },
            "properties": [
              {
                "id": "displayName",
                "value": "Count"
              }
            ]
          }
        ]
      }
    },
    {
      "id": 5,
      "title": "Top Schools by CM Errors",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 18,
        "y": 8
      },
      "targets": [
        {
          "expr": "topk(10, sum by (school_id) (count_over_time({app=\"CM\", host=~\"$host\", level=\"error\", school_id!=\"\"} | json [1h])))",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "${ds_loki}"
          },
          "format": "table",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "displayMode": "list"
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Top Users by CM Errors",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      },
      "targets": [
        {
          "expr": "topk(10, sum by (username) (count_over_time({app=\"CM\", host=~\"$host\", level=\"error\", username!=\"\"} | json [1h])))",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "${ds_loki}"
          },
          "format": "table",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "displayMode": "list"
          }
        }
      }
    },
    {
      "id": 7,
      "title": "HTTP Status Code Distribution",
      "type": "barchart",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      },
      "targets": [
        {
          "expr": "sum(count_over_time({app=\"CM\", host=~\"$host\", source_component=\"haproxy\", http_status!=\"\"} | json [1h])) by (http_status)",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "${ds_loki}"
          },
          "format": "table",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 8,
      "title": "HTTP 4xx/5xx Error Rate",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 24
      },
      "targets": [
        {
          "expr": "sum(rate({app=\"CM\", host=~\"$host\", source_component=\"haproxy\", http_status=~\"4..\"} | json [5m]))",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "${ds_loki}"
          },
          "legendFormat": "4xx Errors/sec"
        },
        {
          "expr": "sum(rate({app=\"CM\", host=~\"$host\", source_component=\"haproxy\", http_status=~\"5..\"} | json [5m]))",
          "refId": "B",
          "datasource": {
            "type": "loki",
            "uid": "${ds_loki}"
          },
          "legendFormat": "5xx Errors/sec"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": {
            "mode": "palette-classic"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 1,
                "color": "yellow"
              },
              {
                "value": 5,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 9,
      "title": "CM Error Rate Over Time",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 24
      },
      "targets": [
        {
          "expr": "sum(rate({app=\"CM\", host=~\"$host\", level=\"error\"} | json [5m])) by (event_category)",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "${ds_loki}"
          },
          "legendFormat": "{{event_category}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    }
  ]
}